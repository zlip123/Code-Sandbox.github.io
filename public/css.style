/* Add your CSS styling here */
body {
    font-family: Arial, sans-serif;
}

h1 {
    text-align: center;
}

#languageSelect {
    margin: 10px;
}

.code-container {
    max-width: 800px;
    margin: 0 auto;
}

#code {
    width: 100%;
    height: 300px;
    resize: vertical;
}

#runButton {
    display: block;
    margin: 10px auto;
}

#output {
    margin: 20px;
    padding: 10px;
    border: 1px solid #ddd;
    background-color: #f5f5f5;
}
